{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:327",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Nanno",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "**"
        ]
      }
    },
    "windows": [
      {
        "title": "Nanno ⭐ GalKeeper",
        "width": 1200,
        "height": 720,
        "minWidth": 630,
        "minHeight": 490
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.gal-keeper.nanno",
      "icon": [
        "icons/nanno.png",
        "icons/nanno.ico"
      ],
      "copyright": "© Copyright 2024 - 2025 Arimura Sena",
      "category": "WordGame",
      "windows": {
        "wix": {
          "language": "ja-JP"
        },
        "nsis": {
          "license": "../LICENSE",
          "installerIcon": "icons/nanno.ico"
        }
      }
    }
  }
}